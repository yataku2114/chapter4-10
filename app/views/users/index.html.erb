<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <div class="profile-container">
      <%= attachment_image_tag current_user, :profile_image, :fill, 50, 50, format: "jpeg", fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div>
        <%= link_to  edit_user_path(@user.id), class:"btn btn-default btn-block" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <h2>New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_field :body %>
        <p><%= f.submit "Create Book"%></p>
      <% end %>
      </div>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tdody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: "jpeg", fallback: "no_image.jpg" %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show","/users/#{user.id}" %></td>
            </tr>
          <% end %>
        </tdody>
      </table>
    </div>
  </div>
</div>